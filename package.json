        "ts-node": "9.1.1",
        "typescript": "4.2.4",
        "unzipper": "0.10.11",
        "uglify-js": "3.13.9",
        "vsce": "1.93.0",
        "vscode-test": "1.5.2",
        "webpack": "5.36.2",
        "webpack-cli": "4.7.0"
    }
