        "@typescript-eslint/eslint-plugin": "4.22.1",
        "@typescript-eslint/parser": "4.22.1",
        "copy-webpack-plugin": "8.1.1",
        "eslint": "7.25.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-jsdoc": "33.1.0",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "fs-extra": "10.0.0",
        "jest": "26.6.3",
