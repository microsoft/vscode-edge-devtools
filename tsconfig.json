{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "out",
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "strict": true,
        "resolveJsonModule": true
    },
    "include": [
        "./**/*"
    ]
}
